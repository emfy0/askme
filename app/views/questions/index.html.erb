<div class="container">
  <p class="mt">
    <%= link_to "Создать новый вопрос", new_question_path, class: 'button button-main' %>
  </p>

  <p class="mt">
    <%= render 'form', question: @question %>
  </p>
</div>

<div class="container mt-sm">
  <h2 class="title-lg">
    <%= availiable_questions(@questions).count %>
    <%= inclination(availiable_questions(@questions).count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<% availiable_questions(@questions.order(created_at: :desc)).each do |question| %>
  <div class="mt-sm container">
    <%= render question %>
  </div>
<% end %>
